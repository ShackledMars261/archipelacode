{
  "name": "archipelacode",
  "displayName": "ArchipelaCode",
  "description": "Archipelago MW implementation for VS Code and LeetCode",
  "author": "Jack Martin",
  "publisher": "ShackledMars261",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "archipelacode.start",
        "title": "Start ArchipelaCode Session",
        "category": "ArchipelaCode"
      },
      {
        "command": "archipelacode.getStatus",
        "title": "Get Current Status",
        "category": "ArchipelaCodeDEBUG"
      },
      {
        "command": "archipelacode.setStatus",
        "title": "Set Current Status",
        "category": "ArchipelaCodeDEBUG"
      },
      {
        "command": "archipelacode.apConnectionTest",
        "title": "Test Connect to Archipelago",
        "category": "ArchipelaCodeDEBUG"
      },
      {
        "command": "archipelacode.apSendCheck",
        "title": "Send Check to Archipelago",
        "category": "ArchipelaCodeDEBUG"
      },
      {
        "command": "archipelacode.submitCode",
        "title": "Submit current code to LeetCode",
        "category": "ArchipelaCode"
      },
      {
        "command": "archipelacode.resetMemento",
        "title": "Reset the Memento cache in globalStatus",
        "category": "ArchipelaCodeDEBUG"
      },
      {
        "command": "archipelacode.refreshExplorer",
        "title": "Refresh the Problem Explorer",
        "category": "ArchipelaCodeDEBUG"
      },
      {
        "command": "archipelacode.openProblem",
        "title": "Opens a problem",
        "category": "ArchipelaCode"
      }
    ],
    "configuration": [
      {
        "title": "ArchipelaCode",
        "properties": {
          "archipelacode.leetCodeEndpoint": {
            "type": "string",
            "default": "leetcode",
            "scope": "application",
            "enum": [
              "leetcode",
              "leetcode-cn"
            ],
            "description": "Endpoint of your LeetCode user account."
          },
          "archipelacode.nodePath": {
            "type": "string",
            "default": "node",
            "scope": "application",
            "description": "The Node.js executable path. for example, C:\\Program Files\\nodejs\\node.exe"
          },
          "archipelacode.colorizeProblems": {
            "type": "boolean",
            "default": true,
            "scope": "application",
            "description": "Add difficulty badge and colorize problems files in explorer tree."
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "archipelacodeViewContainer",
          "title": "ArchipelaCode",
          "icon": "resources/archipelago_icon.svg"
        }
      ]
    },
    "views": {
      "archipelacodeViewContainer": [
        {
          "id": "archipelacodeTreeView",
          "name": "Problem Explorer",
          "icon": "resources/archipelago_icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky install",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src"
  },
  "dependencies": {
    "@codingsnack/leetcode-api": "^0.0.6",
    "archipelago.js": "^2.0.4",
    "axios": "^1.12.1",
    "child_process": "^1.0.2",
    "lodash": "^4.17.21",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "cspell": "^9.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,json}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": "prettier --write",
    "*.md": "cspell --no-progress --color"
  },
  "cspell": {
    "ignorePaths": [
      "vsc-extension-quickstart.md"
    ],
    "dictionaries": [
      "ArchipelaCode Project"
    ],
    "dictionaryDefinitions": [
      {
        "name": "ArchipelaCode Project",
        "path": "./.cspell/project-dictionary.txt",
        "addWords": true
      }
    ]
  }
}
